<%- include("../layout/head", {title: "D - SHOP"})%>
<%- include("../layout/header")%>
<%- include("../layout/sidebar")%>

<body>
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li><a href="/admin/category">Quản lý mã giảm giá</a></li>
				<li class="active"><%=discount.code%></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Tên mã: <%=discount.code%></h1>
			</div>
		</div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                            <% if (typeof error !== 'undefined') { %>
                                <div id="alert" class="alert alert-danger">
                                  <%= error %>
                                </div>
                            <% } %>
                            <form role="form" method="post">
                                <div class="form-group">
                                    <label>Mã giảm giá:</label>
                                    <input type="text" value="<%=discount.code%>" name="code" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Tỉ lệ giảm giá:</label>
                                    <input type="number" value="<%=discount.discount%>" name="discount" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Đơn giá tối thiểu:</label>
                                    <input type="number" value="<%=discount.minOrderValue%>" name="minOrderValue" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Ngày hết hạn:</label>
                                    <input type="date" value="<%=discount.expiryDate.toISOString().slice(0, 10)%>" name="expiryDate" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label style="margin-right: 10px;">Trạng thái hoạt động</label>
                                    <input <%= discount.isActive ? "checked":"" %> name="isActive" type="checkbox" value="on">
                                </div>

                                <button type="submit" name="sbm" class="btn btn-success">Cập nhật</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                                <button class="btn btn-primary">
                                    <a style="color: white; text-decoration: none;" href="/admin/discount">Quay lại</a>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!-- /.col-->
	</div>	<!--/.main-->	
</body>

<script>
    // Tự động ẩn thông báo sau 1 giây
    const errorAlert = document.getElementById('alert');
    if (errorAlert) {
      setTimeout(() => {
        errorAlert.style.display = 'none';
      }, 1000); // 1000ms = 1 giây
    }
</script>

</html>
