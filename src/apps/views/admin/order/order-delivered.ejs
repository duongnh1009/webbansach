<%- include("../layout/head", {title: "D - SHOP"})%>
<%- include("../layout/header")%>
<%- include("../layout/sidebar")%>


<body>	
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active">Đơn hàng đã giao</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Đơn hàng đã giao</h1>
			</div>
		</div><!--/.row-->
		<div id="toolbar" class="toolbar-item">
			<a href="/admin/order" class="btn btn-primary">
				Đang chuẩn bị (<%=order%>)
			</a>

            <a style="margin-left: 10px;" href="/admin/order-transport" class="btn btn-info">
               Đang giao hàng (<%=orderTransport%>)
            </a>

			<a style="margin: 0 10px;" href="/admin/order/trash" class="btn btn-danger">
				Đã hủy đơn (<%=orderRemove%>)
			</a>

			<div>
                <form class="form-inline" action="/admin/search/category">
                    <input style="border: 1px solid #000;" name="keyword" class="form-control mt-3" type="search" required placeholder="Tìm kiếm..." aria-label="Search">
                    <button class="btn btn-danger mt-3" type="submit">Lọc</button>
                </form>
            </div>
        </div>
		<div class="row">
			<div class="col-md-12">
					<div class="panel panel-default">
							<div class="panel-body">
								<table 
									data-toolbar="#toolbar"
									data-toggle="table">
		
									<thead>
									<tr>
										<th>Tên tài khoản</th>
										<th>Số điện thoại</th>
										<th>Thời gian đặt hàng</th>
										<th>Tình trạng</th>
										<th>Hành động</th>
									</tr>
									</thead>
									<tbody>
										<%for(order of orders) {%>
											<tr>
												<td><%=order.fullNameSite%></td>
												<td><%=order.phone%></td>
												<td><%=moment(order.createdAt).format('DD/MM/YYYY')%></td>
												<td><%=order.status%></td>
												<td class="form-group">
													<a href="/admin/order/detail/<%=order._id%>" class="btn btn-primary">Xem chi tiết</a>
												</td>
											</tr>
                                        <%}%>
										
									</tbody>
								</table>
							</div>
							<div class="panel-footer">
								<nav aria-label="Page navigation example">
									<ul class="pagination">
										<%if(currentPage > 1) {%>
											<li class="page-item"><a class="page-link" href="/admin/order-delivered?page=<%= currentPage - 1 %>">&laquo;</a></li>
										<%}%>
										
										<% for (let i = 1; i <= totalPages; i++) { %>
											<li class="page-item <%= currentPage === i ? 'active' : '' %>">
											  <a class="page-link" href="/admin/order-delivered?page=<%= i %>">
												<%= i %>
											  </a>
											</li>
										  <% } %>
		
										<%if(currentPage < totalPages) {%>
											<li class="page-item"><a class="page-link" href="/admin/order-delivered?page=<%= currentPage + 1 %>">&raquo;</a></li>
										<%}%>
									</ul>
								</nav>
							</div>
						</div>
			</div>
		</div><!--/.row-->
	</div>	<!--/.main-->

	<form id="delete-form" method="POST"></form>

	<script>
		document.addEventListener("DOMContentLoaded", function() {
			var itemId;
			var deleteForm = document.forms['delete-form'];
			var btnDelete = document.getElementById("btn-delete");

			$('#delete-item').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget); 
				itemId = button.data('id');
			});

			btnDelete.onclick = function() {
				deleteForm.action = '/admin/order-delivered/delete/' + itemId + '?_method=DELETE';
				deleteForm.submit();
			}
		})
	</script>
	<script src="js/jquery-3.7.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/bootstrap-table.js"></script>	
</body>

</html>