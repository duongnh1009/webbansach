<%- include("../layout/head", {title:"Home"})%>
<%- include("../layout/header")%>
<%- include("../layout/menu")%>
<%- include("../layout/slider")%>

<body>

            <div style="margin-top: 30px;" class="col-lg-12">
                <h3>Thông tin tài khoản</h3>
                <% if(messages.success){ %>
                    <div id="alert" class="alert alert-success"><%= messages.success%></div>
                <% } %>
                <form action="" method="post">
                    <div class="info mx-auto">
                        <div class="info-detail">
                            <label for="">Họ tên:</label>
                            <input class="form-control" name="name" type="text" value="<%=user.name%>">
                        </div>
    
                        <div class="info-detail">
                            <label for="">Email:</label>
                            <input class="form-control" name="mail" type="text" value="<%=user.mail%>">
                        </div>
    
                        <div class="info-detail">
                            <label for="">Số điện thoại:</label>
                            <input class="form-control" name="phone" type="text" value="<%=user.phone%>">
                        </div>
    
                        <div class="info-detail">
                            <label for="">Địa chỉ:</label>
                            <input class="form-control" name="address" type="text" value="<%=user.address%>">
                        </div>

                        <div style="margin-top: 10px;" class="d-flex justify-content-end"> 
                            <button type="submit" class="btn btn-primary">Thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include("../layout/footer")%>
</body>
<style>
    input {
        width: 100%;
    }

    .info {
        width: 600px;
    }

    .info-detail {
        margin: 5px 0px 5px 0px;
    }
</style>

<script>
    // Tự động ẩn thông báo sau 1 giây
    const errorAlert = document.getElementById('alert');
        if (errorAlert) {
            setTimeout(() => {
                errorAlert.style.display = 'none';
            }, 1000); // 1000ms = 1 giây
        }
</script>
</html>